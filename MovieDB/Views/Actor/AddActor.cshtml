@model MovieDB.Models.ActorDetail

@{
    ViewData["Title"] = "AddActor";
    IEnumerable<SelectListItem> MovieSelection = (IEnumerable<SelectListItem>)ViewBag.MovieSelection;
}

<h4>Lägg till skådespelare</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddActor" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Id" class="form-control" hidden />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirthYear" class="control-label"></label>
                <input asp-for="BirthYear" class="form-control" />
                <span asp-validation-for="BirthYear" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Movies" class="control-label"></label><br />
                @Html.ListBoxFor(m => m.Movies, MovieSelection, "Välj filmer")
                <span asp-validation-for="Movies" class="text-danger"></span>
            </div>

            <div class="form-group" >
                <label asp-for="ProfilePicture" class="control-label"></label><br />
                <input asp-for="ProfilePicture"/>
            </div>

            <div class="form-group">
                <input type="submit" value="Lägg till skådespelare" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Actors">Tillbaka till skådespelare</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
